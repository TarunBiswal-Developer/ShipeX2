
@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ShipeX2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .error-container {
            text-align: center;
        }

        .error-icon {
            font-size: 5rem;
            color: #dc3545;
        }

        .btn-home {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-icon mb-3">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <h1 class="display-5 fw-bold">Access Denied</h1>
        <p class="text-muted">You do not have permission to view this page.</p>
        <a href="/" class="btn btn-primary btn-home"><i class="bi bi-house-door-fill me-1"></i>Back to Home</a>
    </div>
</body>
</html>
